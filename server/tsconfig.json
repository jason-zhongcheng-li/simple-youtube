{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2017",
    "skipLibCheck": true,
    "noImplicitAny": true,
    "types": [
      "reflect-metadata",
      "mocha"
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "suppressImplicitAnyIndexErrors": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "declaration": true,
    "outDir": "dist"
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/",
    "test/"
  ]
}